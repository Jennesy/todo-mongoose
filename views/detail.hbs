<form action="/todos/{{ todo._id }}?_method=DELETE" method="POST" style="display: inline;">
  <div class="input-group d-flex flex-row align-items-start flex-nowrap">
    <input class="flex-grow-0 flex-shrink-0 mr-3" style="cursor:auto;margin-top: 0.775rem;" type="checkbox" name="isDone" {{#if todo.isDone }} checked {{/if}} disabled>
    <label class="input-sizer flex-grow-1 flex-shrink-1" data-value="{{ todo.name }}">
      <textarea class="form-control font-weight-light" type="text" placeholder="name" name="name" oninput="this.parentNode.dataset.value = this.value" rows="1" disabled >{{ todo.name }}</textarea>
    </label>
    <div class="input-group-append flex-grow-0 flex-shrink-0 d-flex align-items-center" style="margin-top: 0.625rem;">
      <a class="tool-btn ml-1" href="/todos/{{ todo._id }}/edit">
        <svg xmlns="http://www.w3.org/2000/svg" class="tool-icon tool-icon__edit" viewBox="0 0 24 24" >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M9 7h-3a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-3" />
          <path d="M9 15h3l8.5 -8.5a1.5 1.5 0 0 0 -3 -3l-8.5 8.5v3" />
          <line x1="16" y1="5" x2="19" y2="8" />
        </svg>
      </a>
      <button class="tool-btn ml-1" type="submit">
            <svg xmlns="http://www.w3.org/2000/svg" class="tool-icon tool-icon__delete" viewBox="0 0 24 24" >
              <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
              <line x1="4" y1="7" x2="20" y2="7" />
              <line x1="10" y1="11" x2="10" y2="17" />
              <line x1="14" y1="11" x2="14" y2="17" />
              <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
              <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
            </svg>
      </button>
    </div>
  </div>
</form>